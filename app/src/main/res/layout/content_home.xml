<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="haha.edatelcontrol.frmHome"
    tools:showIn="@layout/activity_home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnMarcar_MA"
                    android:layout_width="0dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_home_left"
                    android:layout_height="100dp"
                    android:text="Marcar Visita"/>

                <Button
                    android:id="@+id/btnGuardarPdv_MA"
                    android:layout_width="0dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/button_home_right"
                    android:layout_weight="1"
                    android:layout_height="100dp"
                    android:text="Cliente Nuevo" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnVender"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_home_left"
                    android:text="Vender" />

                <Button
                    android:id="@+id/btnEstadoCuenta_H"
                    android:layout_width="0dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/button_home_right"
                    android:layout_weight="1"
                    android:layout_height="100dp"
                    android:text="Estado Cuenta" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnReportes_MA"
                    android:layout_width="0dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_home_left"
                    android:layout_height="100dp"
                    android:text="Reportes"/>

                <Button
                    android:id="@+id/btnConfiguracion_MA"
                    android:layout_width="0dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/button_home_right"
                    android:layout_weight="1"
                    android:layout_height="100dp"
                    android:text="ConfiguraciÃ³n" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</android.support.v4.widget.NestedScrollView>
